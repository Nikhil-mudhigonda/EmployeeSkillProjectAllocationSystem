@model IEnumerable<EmployeeSkillProjectAllocationSystem.Models.Project>

<h2>Project List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Project Name
            </th>
            <th>
                IsActive
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Name</td>
                <td>@project.isActive</td>
                <td><a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id">Edit</a></td>
            </tr>
            <br />
            <br />
            <br />
        }
    </tbody>
    <a asp-controller="Project" asp-action="Create">Add a Project</a>
</table>